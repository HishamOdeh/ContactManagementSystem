@typeparam T

<MudAutocomplete T="T"
                 AdornmentIcon="@Icons.Material.Filled.Search"
                 Class="@Class"
                 Clearable="true"
                 CoerceText="true"
                 Error="Error"
                 ErrorText="@ErrorText"
                 Label="@Label"
                 ResetValueOnEmptyText="true"
                 SearchFunc="@SearchFunc"
                 Style="@Style"
                 ToStringFunc=ToStringFunc
                 Value="Value"
                 ValueChanged="ValueChanged"
                 Variant="Variant.Filled">
    <ItemTemplate>
        <MudText>@ResultFormatFunc.Invoke(context)</MudText>
    </ItemTemplate>
</MudAutocomplete>

@code {
    [Parameter] public string Class { get; set; }
    [Parameter] public bool Error { get; set; }
    [Parameter] public string ErrorText { get; set; } = "This field is required";
    [Parameter] public string Label { get; set; }
    [Parameter] public Func<T, string> ResultFormatFunc { get; set; }
    [Parameter] public Func<string, Task<IEnumerable<T>>> SearchFunc { get; set; }
    [Parameter] public string Style { get; set; }
    [Parameter] public Func<T, string> ToStringFunc { get; set; }
    [Parameter] public T Value { get; set; }
    [Parameter] public EventCallback<T> ValueChanged { get; set; }
}